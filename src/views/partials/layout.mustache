<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TravelPlanner - Your Travel Assistant</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="/">TravelPlanner</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    {{#isHomepage}}
                    {{^user}}
                    <li class="nav-item"><a class="btn btn-primary" href="/login">Log In</a></li>
                    {{/user}}
                    {{/isHomepage}}

                    {{#isLoginPage}}
                    <li class="nav-item"><a class="btn btn-primary" href="/signup">Sign Up</a></li>
                    {{/isLoginPage}}

                    {{#isSignupPage}}
                    <li class="nav-item"><a class="btn btn-primary" href="/login">Log In</a></li>
                    {{/isSignupPage}}

                    {{#user}}
                        <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/mytrips">My Trips</a></li>
                        <li class="nav-item"><a class="nav-link" href="/explore">Explore</a></li>
                        
                        <!-- User Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> {{user.username}}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/settings">Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="/logout" method="POST">
                                        <button type="submit" class="dropdown-item text-danger">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    {{/user}}

                    {{^isHomepage}}
                    {{^isLoginPage}}
                    {{^isSignupPage}}
                        {{^user}}
                            <li class="nav-item"><a class="btn btn-primary" href="/signup">Sign Up</a></li>
                        {{/user}}
                    {{/isSignupPage}}
                    {{/isLoginPage}}
                    {{/isHomepage}}
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        {{{body}}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
