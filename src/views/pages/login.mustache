{{> layout }} 

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 p-4 rounded-4">
                <h2 class="text-center fw-bold text-primary">Log In</h2>
                <p class="text-center text-muted">Access your TravelPlanner account</p>
                
                {{#errorMessage}}
                <div class="alert alert-danger text-center mt-3">{{errorMessage}}</div>
                {{/errorMessage}}

                <form action="/login" method="POST" class="mt-4">
                    <div class="mb-3">
                        <label for="email" class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control p-2" id="email" name="email" placeholder="Enter your email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label fw-bold">Password</label>
                        <input type="password" class="form-control p-2" id="password" name="password" placeholder="Enter your password" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 fw-bold p-2">Log In</button>
                </form>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        Don't have an account? <a href="/signup" class="fw-bold text-primary">Sign up</a>
                    </p>
                    <p class="text-muted">
                        <a href="/forgot-password" class="fw-bold text-secondary">Forgot Password?</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer }}
