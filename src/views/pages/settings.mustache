{{> layout }}

<div class="container mt-5">
    <h2 class="text-center fw-bold text-primary">Settings</h2>
    <p class="text-center text-muted">Customize your TravelPlanner preferences.</p>

    <div class="card shadow-sm border-0 rounded-4 p-4 mt-4">
        <form action="/update-settings" method="POST">
            <!-- General Preferences -->
            <h5 class="fw-bold text-primary mb-3">General Preferences</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="default_currency" class="form-label"><i class="bi bi-cash-coin text-primary"></i> Default Currency</label>
                    <select class="form-select" id="default_currency" name="default_currency">
                        <option value="CAD">CAD - Canadian Dollar</option>
                        <option value="USD">USD - US Dollar</option>
                        <option value="EUR">EUR - Euro</option>
                        <option value="GBP">GBP - British Pound</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="timezone" class="form-label"><i class="bi bi-clock text-primary"></i> Timezone</label>
                    <select class="form-select" id="timezone" name="timezone">
                        <option value="UTC-5">Eastern Time (UTC-5)</option>
                        <option value="UTC-6">Central Time (UTC-6)</option>
                        <option value="UTC-7">Mountain Time (UTC-7)</option>
                        <option value="UTC-8">Pacific Time (UTC-8)</option>
                    </select>
                </div>
            </div>

            <!-- Notifications -->
            <h5 class="fw-bold text-primary mt-4">Notifications</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label"><i class="bi bi-bell text-warning"></i> Notification Preferences</label>
                    <select class="form-select" id="notification_pref" name="notification_pref">
                        <option value="email">Email</option>
                        <option value="sms">SMS</option>
                        <option value="none">None</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><i class="bi bi-calendar-check text-success"></i> Trip Reminders</label>
                    <div class="form-check form-switch mt-1">
                        <input class="form-check-input" type="checkbox" id="trip_reminder" name="trip_reminder" checked>
                        <label class="form-check-label" for="trip_reminder">Enable trip reminders</label>
                    </div>
                </div>
            </div>

            <!-- Appearance -->
            <h5 class="fw-bold text-primary mt-4">Appearance</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="theme" class="form-label"><i class="bi bi-palette text-info"></i> Theme</label>
                    <select class="form-select" id="theme" name="theme">
                        <option value="light">Light</option>
                        <option value="dark">Dark</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="language" class="form-label"><i class="bi bi-translate text-primary"></i> Language</label>
                    <select class="form-select" id="language" name="language">
                        <option value="en">English</option>
                        <option value="fr">French</option>
                        <option value="es">Spanish</option>
                        <option value="de">German</option>
                    </select>
                </div>
            </div>

            <!-- Save Button -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg fw-bold px-4">Save Settings</button>
            </div>
        </form>
    </div>
</div>

{{> footer }}
