{{> layout }}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/style.css">

<div class="container-fluid p-5 text-center bg-primary text-white">
    
    {{#user}}
    <h1 class="display-4">Welcome to TravelPlanner, {{user.username}}!</h1>
    {{/user}}
    {{^user}}
    <h1 class="display-4">Welcome to TravelPlanner</h1>
    {{/user}}

    <p class="lead">Plan, manage, and explore your travels with ease.</p>
    {{#user}}
    <a href="/dashboard" class="btn btn-light btn-lg mt-3">Go to Dashboard</a>
    {{/user}}
    {{^user}}
    <a href="/signup" class="btn btn-light btn-lg mt-3">Get Started</a>
    {{/user}}
</div>

<section class="feature-section">
    <div class="container mt-5">
        <div class="row g-4 text-center">
            {{#user}}
            <div class="col-md-4">
                <div class="card feature-card shadow-sm border-0 h-100 d-flex flex-column">
                <img src="/images/dashboard.jpg" class="card-img-top img-fluid" alt="Dashboard">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Dashboard</h5>
                    <p class="card-text flex-grow-1">View upcoming trips and reminders.</p>
                    <a href="/dashboard" class="btn btn-outline-primary mt-auto">Go to Dashboard</a>
                </div>
            </div>
        </div>
        {{/user}}
        
        <div class="col-md-4">
            <div class="card feature-card shadow-sm border-0 h-100 d-flex flex-column">
                <img src="/images/travel.jpg" class="card-img-top img-fluid" alt="Travel">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Plan Your Trips</h5>
                    <p class="card-text flex-grow-1">Organize and manage your travel itinerary.</p>
                    <a href="/mytrips" class="btn btn-outline-primary mt-auto">Manage Trips</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card feature-card shadow-sm border-0 h-100 d-flex flex-column">
                <img src="/images/vacation.jpg" class="card-img-top img-fluid" alt="Vacation">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Explore Destinations</h5>
                    <p class="card-text flex-grow-1">Discover new places and plan your next adventure.</p>
                    <a href="/explore" class="btn btn-outline-primary mt-auto">Start Exploring</a>
                </div>
            </div>
        </div>

        {{^user}}
        <div class="col-md-4">
            <div class="card feature-card shadow-sm border-0 h-100 d-flex flex-column">
                <img src="/images/tips.png" class="card-img-top img-fluid" alt="Travel Tips">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Travel Tips</h5>
                    <p class="card-text flex-grow-1">Get expert advice on making your trip more enjoyable.</p>
                    <a href="/tips" class="btn btn-outline-primary mt-auto">Read Tips</a>
                </div>
            </div>
        </div>
        {{/user}}
    </div>
</div>

<div class="container-fluid bg-light mt-5 p-5 text-center">
    <h2 class="mb-3">Start Planning Your Next Adventure</h2>
    <p class="lead text-muted">Create a trip, set a budget, and stay organized.</p>
    {{#user}}
    <a href="/mytrips" class="btn btn-primary btn-lg">View My Trips</a>
    {{/user}}
    {{^user}}
    <a href="/signup" class="btn btn-primary btn-lg">Sign Up Now</a>
    {{/user}}
</div>


<footer class="bg-dark text-white py-3 text-center">
    <p class="mb-0">&copy; 2025 TravelPlanner. All rights reserved.</p>
    <p class="small">Made for travelers, by travelers.</p>
</footer>