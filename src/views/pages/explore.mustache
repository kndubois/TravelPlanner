{{> layout }}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Explore the World</h1>
        <p class="text-muted lead">Find your next destination and start planning your dream trip today.</p>
    </div>

    <!-- Suggested Destinations -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#suggested_trips}}
        <div class="col">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <img src="/images/{{destination}}.jpg" class="card-img-top rounded-top" alt="{{destination}}">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary fw-bold">{{destination}}</h5>
                    <p class="card-text"><strong>Best time to visit:</strong> {{best_time}}</p>
                    <p class="card-text"><strong>Estimated Budget:</strong> ${{budget}}</p>
                    <p class="card-text text-muted small"><i class="bi bi-tags"></i> Category: {{category}}</p>
                    <div class="mt-auto">
                        <a href="/add-trip?destination={{destination}}" class="btn btn-primary w-100 fw-bold">
                            <i class="bi bi-calendar-plus"></i> Plan This Trip
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{/suggested_trips}}
    </div>
</div>

{{> footer }}
