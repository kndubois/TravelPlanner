{{> layout }}

<div class="container mt-5 mb-5">
    <h2 class="text-center fw-bold text-primary">Explore Destinations</h2>
    <p class="text-center text-muted">Find inspiration for your next adventure!</p>

    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        {{#suggested_trips}}
        <div class="col">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="explore-image" style="background: url('{{image}}') center/cover; height: 180px;"></div>
                <div class="card-body">
                    <h5 class="card-title text-primary fw-bold">{{destination}}</h5>
                    <p class="text-muted mb-1"><strong>Best Time:</strong> {{best_time}}</p>
                    <p class="text-muted mb-1"><strong>Estimated Budget:</strong> {{budget}}</p>
                    <p class="text-muted"><strong>Category:</strong> {{category}}</p>
                    <a href="/add-trip?destination={{destination}}" class="btn btn-outline-primary w-100">Plan This Trip</a>
                </div>
            </div>
        </div>
        {{/suggested_trips}}
    </div>

    <!-- Travel Tips Section -->
    <div class="mt-5">
        <h3 class="fw-bold text-primary text-center">Travel Tips & Advice</h3>
        <p class="text-center text-muted">Essential tips to make your trips better!</p>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            {{#tips}}
            <div class="col">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">
                        <h5 class="fw-bold text-primary">{{title}}</h5>
                        <p class="text-muted small"><strong>Category:</strong> {{category}}</p>
                        <p>{{content}}</p>
                    </div>
                </div>
            </div>
            {{/tips}}

            {{^tips}}
            <p class="text-muted text-center mt-4">No travel tips available</p>
            {{/tips}}
        </div>

        <div class="text-center mt-4">
            <a href="/tips" class="btn btn-outline-primary">View More Tips</a>
        </div>
    </div>
</div>

{{> footer }}
