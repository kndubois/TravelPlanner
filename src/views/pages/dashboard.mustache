{{> layout }}

<header class="hero-section bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-3 fw-bold">Welcome, {{user.username}}!</h1>
        <p class="lead mt-3">Your travel plans, all in one place.</p>
    </div>
</header>

<section class="dashboard-overview py-5 bg-light">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <div class="card feature-card shadow-sm border-0 h-100 d-flex flex-column">
                    <img src="/images/mytrips.jpg" class="card-img-top img-fluid" alt="My Trips">
                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-bold">My Trips</h5>
                        <p class="card-text flex-grow-1">View and manage all your planned trips.</p>
                        <a href="/mytrips" class="btn btn-primary mt-auto">View Trips</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card feature-card shadow-sm border-0 h-100 d-flex flex-column">
                    <img src="/images/planatrip.png" class="card-img-top img-fluid" alt="Plan a Trip">
                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-bold">Plan a Trip</h5>
                        <p class="card-text flex-grow-1">Start planning your next adventure.</p>
                        <a href="/add-trip" class="btn btn-primary mt-auto">Add Trip</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card feature-card shadow-sm border-0 h-100 d-flex flex-column">
                    <img src="/images/explore.jpg" class="card-img-top img-fluid" alt="Explore">
                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-bold">Explore</h5>
                        <p class="card-text flex-grow-1">Discover new destinations & travel tips.</p>
                        <a href="/explore" class="btn btn-primary mt-auto">Explore Now</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card feature-card shadow-sm border-0 h-100 d-flex flex-column">
                    <img src="/images/settings.jpg" class="card-img-top img-fluid" alt="Settings">
                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-bold">Settings</h5>
                        <p class="card-text flex-grow-1">Manage your preferences & notifications.</p>
                        <a href="/settings" class="btn btn-primary mt-auto">Go to Settings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="dashboard-trips py-5">
    <div class="container">
        <h2 class="text-center mb-4 fw-bold">Upcoming Trips & Reminders</h2>
        
        <div class="row g-4">
            <!-- Upcoming Trips -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-primary text-white fw-bold">Upcoming Trips</div>
                    <div class="card-body">
                        {{#trips}}
                        <div class="alert alert-light border d-flex justify-content-between align-items-center">
                            <span>
                                <strong>{{destination}}</strong><br>
                                <small class="text-muted">{{start_date}} â†’ {{end_date}}</small>
                            </span>
                            <span class="badge {{#completed}}bg-success{{/completed}}{{^completed}}bg-warning text-dark{{/completed}}">
                                {{#completed}}Completed{{/completed}}{{^completed}}Planned{{/completed}}
                            </span>
                        </div>
                        {{/trips}}
                        {{^trips}}
                        <p class="text-muted text-center">No upcoming trips.</p>
                        {{/trips}}
                    </div>
                </div>
            </div>

            <!-- Reminders -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-warning text-dark fw-bold">Reminders</div>
                    <div class="card-body">
                        {{#trips}}
                        {{#reminder}}
                        <div class="alert alert-warning border d-flex justify-content-between align-items-center">
                            <span>You have a trip coming up for <strong>{{destination}}</strong> on <strong>{{start_date}}</strong>.</span>
                        </div>
                        {{/reminder}}
                        {{/trips}}
                        {{^trips}}
                        <p class="text-muted text-center">No reminders set.</p>
                        {{/trips}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="cta bg-primary text-white text-center py-5">
    <div class="container">
        <h2 class="fw-bold">Start Planning Your Next Adventure</h2>
        <p class="lead mt-2">Stay organized and never miss an important trip.</p>
        <div class="mt-4">
            <a href="/add-trip" class="btn btn-light btn-lg fw-bold px-4">Plan a Trip</a>
        </div>
    </div>
</section>

{{> footer }}
